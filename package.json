{
  "name": "pnu_blace",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=!docs",
    "build:api": "turbo run build --filter=@pnu-blace/db --filter=@pnu-blace/types --filter=api",
    "build:web": "turbo run build --filter=web",
    "dev": "docker-compose up -d && turbo run dev --filter=!docs",
    "dev:no-docker": "turbo run dev",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "type-check": "turbo run type-check",
    "start": "yarn workspace api start:prod"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@3.6.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
