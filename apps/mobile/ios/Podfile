# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Required for Firebase with static libraries
# use_modular_headers!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'PNUBlace' do
  pod 'GoogleUtilities', :modular_headers => true
  pod 'FirebaseCore', :modular_headers => true
  pod 'FirebaseCoreInternal', :modular_headers => true
  
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
      end
    end
    
    # Xcode 26 workaround: Rename duplicate react_runtime module to fix build error
    # The React-jsitooling.modulemap and React-RuntimeCore.modulemap both define 'module react_runtime'
    # causing "Redefinition of module 'react_runtime'" error on Xcode 26
    duplicate_modulemap = File.join(__dir__, 'Pods', 'Headers', 'Public', 'react_runtime', 'React-jsitooling.modulemap')
    if File.exist?(duplicate_modulemap)
      content = File.read(duplicate_modulemap)
      if content.include?('module react_runtime {')
        content = content.gsub('module react_runtime {', 'module react_runtime_jsitooling {')
        File.write(duplicate_modulemap, content)
        Pod::UI.puts "Renamed react_runtime to react_runtime_jsitooling for Xcode 26 compatibility".yellow
      end
    end
  end
end
