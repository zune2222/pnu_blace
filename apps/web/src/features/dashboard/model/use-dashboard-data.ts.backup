"use client";
import { useState, useEffect, useCallback } from "react";
import { DashboardData, dashboardApi } from "@/entities/dashboard";

export const useDashboardData = () => {
  const [dashboardData, setDashboardData] = useState<DashboardData | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);
  const [lastUpdated, setLastUpdated] = useState<Date | null>(null);

  // 데이터 로딩 함수
  const loadDashboardData = useCallback(async (showLoading = true) => {
    try {
      if (showLoading) setIsLoading(true);
      setError(null);
      
      const response = await dashboardApi.getDashboardData();
      setDashboardData(response.data);
      setLastUpdated(new Date());
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : '대시보드 데이터를 불러올 수 없습니다';
      setError(errorMessage);
      console.error('대시보드 데이터 로딩 실패:', err);
    } finally {
      if (showLoading) setIsLoading(false);
    }
  }, []);

  // 초기 데이터 로딩
  useEffect(() => {
    loadDashboardData(true);
  }, [loadDashboardData]);

  // 실시간 데이터 업데이트 (30초마다)
  useEffect(() => {
    const interval = setInterval(() => {
      if (!isLoading && !error) {
        loadDashboardData(false); // 백그라운드 업데이트 (로딩 없음)
      }
    }, 30000); // 30초

    return () => clearInterval(interval);
  }, [isLoading, error, loadDashboardData]);

  // 수동 새로고침
  const refresh = useCallback(() => {
    loadDashboardData(true);
  }, [loadDashboardData]);

  // 좌석 예약 취소 후 데이터 업데이트
  const cancelReservation = useCallback(async (reservationId: string) => {
    try {
      await dashboardApi.cancelReservation(reservationId);
      // 데이터 새로고침
      await loadDashboardData(false);
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : '예약 취소에 실패했습니다';
      setError(errorMessage);
      throw err;
    }
  }, [loadDashboardData]);

  // 좌석 연장 후 데이터 업데이트
  const extendReservation = useCallback(async (reservationId: string, duration: number) => {
    try {
      const updatedSeat = await dashboardApi.extendReservation(reservationId, duration);
      
      // 현재 데이터 업데이트
      if (dashboardData) {
        setDashboardData(prev => prev ? {
          ...prev,
          currentSeat: updatedSeat
        } : null);
      }
      
      return updatedSeat;
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : '예약 연장에 실패했습니다';
      setError(errorMessage);
      throw err;
    }
  }, [dashboardData]);

  // 즐겨찾기 토글 후 데이터 업데이트
  const toggleFavorite = useCallback(async (roomId: string, isFavorite: boolean) => {
    try {
      await dashboardApi.toggleFavorite({ roomId, isFavorite });
      // 즐겨찾기 데이터만 새로고침
      const updatedFavorites = await dashboardApi.getFavoriteRooms();
      
      if (dashboardData) {
        setDashboardData(prev => prev ? {
          ...prev,
          favoriteRooms: updatedFavorites
        } : null);
      }
    } catch (err) {
      const errorMessage = err instanceof Error ? err.message : '즐겨찾기 설정에 실패했습니다';
      setError(errorMessage);
      throw err;
    }
  }, [dashboardData]);

  return {
    // 데이터
    dashboardData,
    currentSeat: dashboardData?.currentSeat || null,
    favoriteRooms: dashboardData?.favoriteRooms || null,
    quickInsights: dashboardData?.quickInsights || null,
    
    // 상태
    isLoading,
    error,
    lastUpdated,
    
    // 액션
    refresh,
    cancelReservation,
    extendReservation,
    toggleFavorite,
    
    // 유틸리티
    isDataStale: lastUpdated ? Date.now() - lastUpdated.getTime() > 60000 : false, // 1분 이상 지났으면 stale
  };
};